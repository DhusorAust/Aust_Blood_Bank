<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"


        android:layout_marginTop="0dp"
        android:background="#FFFF00"
        android:text="DONOR REGISTRATION FORM"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="110dp"
        android:text="Blood Group"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:text="Department"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="230dp"
        android:text="Batch No"
        android:textColor="@color/white"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Mobile No"
        android:textSize="30sp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Address"
        android:textSize="30sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="414dp"

        android:background="@drawable/custom_button"
        android:onClick="save"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="266dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/register"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="-116dp"
        android:background="@color/white"
        android:hint="Enter your name"
        android:textSize="25sp" />


    <Button
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="282dp"
        android:layout_marginTop="107dp"
        android:background="@color/white"
        android:onClick="item"
        android:text="Select" />


    <Button
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="282dp"
        android:layout_marginTop="170dp"

        android:background="@color/white"
        android:onClick="deparment"
        android:text="Select" />


    <EditText
        android:id="@+id/batch_no"

        android:layout_width="220dp"
        android:layout_height="35dp"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="175sp"
        android:layout_marginTop="240dp"

        android:background="@color/white"
        android:hint="Enter your Batch Number"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/mobile_no"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="290dp"
        android:background="@color/white"
        android:hint="Enter Mobile number"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textSize="20sp"


        />

    <EditText
        android:id="@+id/address"
        android:layout_marginLeft="170dp"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="350dp"
        android:inputType="text"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:background="@color/white"

        />
</RelativeLayout>